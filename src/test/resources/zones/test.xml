<?xml version="1.0"?>
<zone>
    <name>test</name>
    <description>Test zone</description>
    <rooms>
        <room>
            <id>square</id>
            <name>Test square</name>
            <description>
                Test square description.
            </description>
            <exits>
                <south>crossroads</south>
                <west>door</west>
            </exits>
        </room>

        <room>
            <id>crossroads</id>
            <name>Test crossroads</name>
            <description>
                Test crossroads description.
            </description>
            <exits>
                <north>square</north>
            </exits>
        </room>

        <room>
            <id>door</id>
            <name>Test door room</name>
            <description>
                Test door room description.
            </description>
            <exits>
                <east>
                    <room>square</room>
                    <door>door</door>
                </east>
                <west>
                    <room>square</room>
                    <door closed="false">closed door</door>
                </west>
            </exits>
        </room>
    </rooms>
</zone>
